{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
	"headers": [
    {
      "source": "*", // Adjust if you want to restrict allowed origins
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }, // Adjust if you want to restrict allowed origins (replace "*" with specific origins)
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" }
      ]
    }
  ]
}